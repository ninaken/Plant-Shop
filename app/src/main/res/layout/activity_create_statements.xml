<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateStatementsActivity"
    android:background="@drawable/background_2">

  <EditText
      android:id="@+id/editTextUserImageUrl"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="50dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="50dp"
      android:ems="10"
      android:hint="მიუთითეთ სურათის ლინკი"
      android:inputType="textPersonName"
      android:textSize="15sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextUserDescription" />

  <ImageView
      android:id="@+id/imageViewUserInput"
      android:layout_width="100dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="48dp"
      android:layout_marginTop="68dp"
      android:src="@drawable/ic_launcher_foreground"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/editTextUserTitle"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_marginTop="68dp"
      android:layout_marginEnd="8dp"
      android:ems="10"
      android:hint="დასახელება"
      android:inputType="textPersonName"
      android:textColorHint="@color/maingreen"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.514"
      app:layout_constraintStart_toEndOf="@+id/imageViewUserInput"
      app:layout_constraintTop_toTopOf="parent" />

  <EditText
      android:id="@+id/editTextUserDescription"
      android:layout_width="146dp"
      android:layout_height="49dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="24dp"
      android:layout_marginEnd="8dp"
      android:ems="10"
      android:hint="აღწერა"
      android:inputType="textPersonName"
      android:textColorHint="@color/maingreen"
      android:textSize="11sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.51"
      app:layout_constraintStart_toEndOf="@+id/imageViewUserInput"
      app:layout_constraintTop_toBottomOf="@+id/editTextUserTitle" />

  <Button
      android:id="@+id/buttonAddImage"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:background="@android:color/transparent"
      android:text="სურათის დამატება"
      android:textColor="@color/maingreen"
      android:textSize="12sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.494"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/editTextUserImageUrl" />

  <Button
      android:id="@+id/buttonAddStatement"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="32dp"
      android:layout_marginTop="92dp"
      android:layout_marginEnd="32dp"
      android:background="@color/whitetransp"
      android:paddingLeft="8dp"
      android:paddingRight="8dp"
      android:text="განცხადების დამატება"
      android:textColor="@color/maingreen"
      android:textSize="15sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/buttonAddImage" />

</androidx.constraintlayout.widget.ConstraintLayout>